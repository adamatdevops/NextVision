{
	"extends": "./tsconfig.json",
	"compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
		// ensure that nobody can accidentally use this config for a build
		// "noEmit": true
	},
	"include": [
    "vite.config.ts",
		"src/**/*.ts",
		"src/**/*.jsx",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"build/**/*",
		"coverage/",
		"test*.*",
		"jest.config.js",
		"bin/",
		"dist/**/*",
		"docs/",
		"scripts/",
		"tests/**/*"
	]
}
