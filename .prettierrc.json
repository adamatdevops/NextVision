{
	"printWidth": 80,
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"quoteProps": "as-needed",
	"jsxSingleQuote": false,
	"singleQuote": false,
	"bracketSpacing": true,
	"bracketLine": false,
	"parser": "typescript",
	"htmlWhitespaceSensitivity": "ignore",
	"endOfLine": "lf",
	"singleAttributePerLine": false,
	"overrides": [
		{
			"files": ["*.html"],
			"options": {
				"parser": "html"
			}
		},
		{
			"files": ["*.css"],
			"options": {
				"parser": "css",
				"htmlWhitespaceSensitivity": "css",
                "tabWidth": 4,
                "singleQuote": false
			}
		},
		{
			"files": "*.properties",
			"options": {
				"printWidth": 0
			}
		}
	]
}
