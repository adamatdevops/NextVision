{
	"map": false,
	"parser": "sugarss",
  "plugins": [
		"precss",
		"postcss-mixins",
		"postcss-preset-env",
    "autoprefixer",
    "postcss-nested",
		[
			"postcss-simple-vars",
			{
 				"variables": {
      		"mantine-breakpoint-xs": "36em",
        	"mantine-breakpoint-sm": "48em",
        	"mantine-breakpoint-md": "62em",
        	"mantine-breakpoint-lg": "75em",
        	"mantine-breakpoint-xl": "88em"
      	}
			}
		],
		[
			"cssnano", {
				"preset": [
					"advanced", { "discardComments": false }
				]
			}
		]
  ]
}
